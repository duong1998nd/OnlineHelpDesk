@model IEnumerable<OnlineHelpDesk.Models.Account>

@{
    ViewData["Title"] = "List Status";
}
<div class="content-wrapper">
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <h3>@ViewBag.msg</h3>
                    <h2>List status</h2>

                    <p>
                        <a asp-controller="Status" asp-action="Create">Create New</a>
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Display
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.status)
                            {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @(item.Display ? "Active" : "Disable")
                                </td>
                                <td>
                                    <a asp-controller="Status" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-controller="Status" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-controller="Status" asp-action="Delete" asp-route-id="@item.Id" OnClick="return confirm('Are you sure?')">Delete</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
