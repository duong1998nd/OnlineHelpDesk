@model OnlineHelpDesk.Models.Account

@{
    ViewData["Title"] = "Admin Page";
}
<div class="content-wrapper">
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-6">

                    <h4>Detail</h4>
                    @if (ViewBag.msg != null)
                    {
                        if (ViewBag.msg == "Oke")
                        {
                            <div class="callout callout-success">
                                <h5>Updated</h5>
                            </div>
                        }
                        else
                        {
                            <div class="callout callout-danger">
                                <h5>Failed</h5>
                            </div>
                        }
                    }
                    <hr />
                    <form asp-controller="account" asp-action="details" method="post">
                        <div class="form-group">
                            <label for="FName" class="control-label">Name: </label>
                            <input asp-for="FName" class="form-control" required="required" />
                        </div>
                        <div class="form-group">
                            <label for="Email" class="control-label">Email: </label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp="Password" class="control-label">Password</label>
                            <input asp-for="Password" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



