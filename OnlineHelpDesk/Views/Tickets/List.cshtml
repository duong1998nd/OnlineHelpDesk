@model IEnumerable<OnlineHelpDesk.Models.Ticket>

@{
    ViewData["Title"] = "List ticket";
}
<div class="content-wrapper">
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">

                    <h3>
                        List ticket
                    </h3>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Number
                                </th>
                                <th>
                                    Tittle
                                </th>
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Supporter Name
                                </th>
                                <th>
                                    Period
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Created date
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.tickets)
                            {
                            <tr>
                                <td>
                                    @item.Id
                                </td>
                                <td>
                                    @item.Tittle
                                </td>
                                <td>
                                    @(item.User !=null ? item.User.FName : "")
                                </td>
                                <td>
                                    @(item.Supporter != null ? item.Supporter.FName : "")
                                </td>
                                <td>
                                    @item.Period.Name
                                </td>
                                <td>
                                    @item.Status.Name
                                </td>
                                <td>
                                    @item.Category.Name
                                </td>
                                <td>
                                    @item.CreatedDate
                                </td>

                                <td>
                                    <a asp-controller="tickets" asp-action="chat" asp-route-id="@item.Id">Chat with supporter</a> |
                                    <a asp-controller="tickets" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                        <tfoot>
                            
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
