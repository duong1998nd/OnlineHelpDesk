@model IEnumerable<OnlineHelpDesk.Models.Ticket>

@{
    ViewData["Title"] = "History";
}
<div class="content-wrapper">
    <!-- Main content -->
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">

                    <p>
                        <a asp-action="Create">History</a>
                    </p>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    Number
                                </th>
                                <th>
                                    Tittle
                                </th>
                                <th>
                                    Period
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Category
                                </th>
                                <th>
                                    Created date
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.tickets)
                            {
                                <tr>
                                    <td>
                                        @item.Id
                                    </td>
                                    <td>
                                        @item.Tittle
                                    </td>
                                    <td>
                                        @item.Period.Name
                                    </td>
                                    <td>
                                        @item.Status.Name
                                    </td>
                                    <td>
                                        @item.Category.Name
                                    </td>
                                    <td>
                                        @item.CreatedDate
                                    </td>
                                    
                                    <td>
                                        <a asp-controller="tickets" asp-action="chat" asp-route-id="@item.Id">Chat with supporter</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
